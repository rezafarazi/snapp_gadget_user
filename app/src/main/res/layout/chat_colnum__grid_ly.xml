<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_ly_chat_grid_ly"
    android:background="#ffe7f5">






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="8dp"
        android:background="@drawable/white_chat_item_background"
        android:id="@+id/main2_ly_chat_grid_ly">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سلام من رضا فرازی هستم کار ما چه زمان حاظر میشه چی کار کنیم زود تر حاظر بشه ؟ ممنون"
            android:fontFamily="@font/is"
            android:textColor="#666"
            android:textSize="12dp"
            android:id="@+id/chat_item_text_view_chat_colnum_grid_ly"
            android:layout_margin="2dp" />

        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_item_text_view_chat_colnum_grid_ly"
            android:layout_marginTop="10dp">
        
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/single_see_icon"
                android:id="@+id/chat_item_see_image_view_chat_colnum_grid_ly"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جمعه 22:30"
                android:fontFamily="@font/is"
                android:textColor="#666"
                android:textSize="12dp"
                android:id="@+id/chat_item_date_text_view_chat_colnum_grid_ly"/>


        </LinearLayout>
        
        
        
        
    </RelativeLayout>








</RelativeLayout>