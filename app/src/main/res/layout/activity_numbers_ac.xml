<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".numbers_ac">






    <include
        layout="@layout/header_m_ac"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/header_numbers_ac"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_numbers_ac"
        android:layout_margin="@dimen/margin_15"
        android:id="@+id/question_textview_numbers_ac"
        android:textSize="@dimen/text_view_text_size16"
        android:textColor="@color/textcolor1"/>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:textAlignment="center"
        android:background="@drawable/edittext_border"
        android:textSize="@dimen/text_view_text_size16"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:layout_below="@id/question_textview_numbers_ac"
        android:id="@+id/number_edittext_numbers_ac"
        android:inputType="number"/>










    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:text="@string/next_page"
        android:textColor="@color/colorAccent"
        android:id="@+id/done_or_default_in"
        android:textSize="@dimen/button_text_text_size12"
        android:onClick="onclick_done_btn_numbers_ac"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/button_border_pay_color"/>








</RelativeLayout>