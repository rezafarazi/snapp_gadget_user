<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question_ac"
    android:background="@color/colorAccent">

    <include
        layout="@layout/header_m_ac"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/header_question_ac"/>























    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_question_ac"
        android:layout_marginBottom="?actionBarSize">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/det"
            android:id="@+id/question_textview_question_ac"
            android:textSize="@dimen/text_view_text_size16"
            android:layout_margin="@dimen/margin_5"
            android:textColor="@color/textcolor1"/>







        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/edittext_border"
            android:textAlignment="center"
            android:textColor="@color/textcolor1"
            android:hint="@string/det"
            android:id="@+id/text_area_question_ac"
            android:textSize="@dimen/text_view_text_size16"
            android:layout_below="@+id/question_textview_question_ac"/>





    </RelativeLayout>






























    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:text="@string/next_page"
        android:textColor="@color/colorAccent"
        android:id="@+id/done_or_default_in"
        android:textSize="@dimen/button_text_text_size12"
        android:onClick="onclick_done_btn_question_ac"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/button_border_pay_color"/>




</RelativeLayout>