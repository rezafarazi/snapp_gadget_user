<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grid_view_back_color"
    android:backgroundTint="@color/grid_view_back_color">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:backgroundTint="@color/colorAccent"
        android:foreground="@drawable/ripple_click_item">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layoutDirection="rtl">








            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:id="@+id/image_grid_get_all_list_ac"/>









            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/To_Next_Day"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/textview_grid_get_all_list_ac"
                    android:textSize="@dimen/text_view_text_size12"/>









            </RelativeLayout>



        </LinearLayout>








    </android.support.v7.widget.CardView>



</RelativeLayout>